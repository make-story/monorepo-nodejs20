{
  "name": "@makestory/e2e-test",
  "version": "1.0.0",
  "private": true,
  "bin": {
    "clitest": "./cli.js"
  },
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('use Yarn, no NPM')\"",
    "dev": "NODE_OPTIONS='--inspect' NODE_ENV=${NODE_ENV:=development} PORT=9040 PORT_SSL=443 nodemon",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "start:dev": "NODE_ENV=development node dist/server.js",
    "start:prd": "NODE_ENV=production node dist/server.js",
    "ts-node:cli": "ts-node --project tsconfig.cli.json",
    "ts-node:server": "ts-node --project tsconfig.json server.ts",
    "playwright": "playwright",
    "codegen:pc": "playwright codegen",
    "codegen:mobile": "playwright codegen --device='iPhone 13'"
  },
  "dependencies": {
    "@makestory/config": "*",
    "@makestory/event-manager": "*",
    "@makestory/fetch-manager": "*",
    "@makestory/logging-manager": "*",
    "@makestory/utils": "*",
    "@playwright/test": "^1.41.2",
    "@types/dotenv-flow": "^3.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/ws": "^8.5.10",
    "axios": "1.6.5",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "helmet": "^7.1.0",
    "nodemon": "^3.1.0",
    "path-match": "^1.2.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.1.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {}
}
